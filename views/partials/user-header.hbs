  }
  .btn-outline-warning:hover {
    background-color: #ffc107;
    color: #fff;
  }
  .dropdown-menu {
    background-color: #000;
    color: #fff;
    border-radius: 8px;
    overflow: hidden;
  }
  .dropdown-item {
    transition: background-color 0.3s, color 0.3s;
    mt-2
  }
  .dropdown-item:hover {
    background-color: #343a40;
    color: #fff;
  }
  .dropdown-item.text-danger {
    background-color: #6c757d;
