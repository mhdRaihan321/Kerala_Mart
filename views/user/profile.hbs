<h3 class="text-center mt-4">Profile</h3>
<section class="container profile-section py-4">
  <a href="/" class="btn btn-warning mb-4 text-dark" style="font-weight: bold;">
    <i class="fa-regular fa-circle-left fa-xl" style="color: #000000;"></i> Back
  </a>
  <div class="container">
    {{#if UserInfo}}
      <div class="profile-card shadow-lg p-4 rounded">
        <h4 class="profile-item"><strong>Name: </strong> {{UserInfo.name}}</h4>
        <div class="emailVf">
          <h4 style="display: flex;" class="profile-item">
            <strong>Email: <span> </span></strong> <span style="    padding-left: 8px;">{{UserInfo.email}}</span> 
            {{#if UserInfo.emailVerified}}
              <div class="Vf_badge">
                <img style="height: 25px;margin-left: 10px;" src="https://stockton.pythonanywhere.com/static/images/VF-removebg-preview.png" alt="">
              </div>
            {{else}}
              <span> </span><a href="profile/verifyemail" class="btn btn-sm btn-warning ms-2">Verify</a>
            {{/if}}
          </h4>
        </div>
        <h4 class="profile-item">
          <strong>Mobile: </strong> 
          {{#if UserInfo.mobile}}
            {{UserInfo.mobile}}
          {{else}}
            <a href="mailto:mhdraihan383@gmail.com" class="text-primary">Mail at mhdraihan383@gmail.com</a>
          {{/if}}
        </h4>
        <div class="text-center mt-4">
          <a href="/edituserinfo/{{UserInfo._id}}" class="btn btn-primary">Edit User Details</a>
        </div>
      </div>
    {{/if}}
  </div>
</section>

<style>
  .profile-section {
    background-color: #f9f9f9;
  }
  .profile-card {
    background: linear-gradient(135deg, #ece9e6, #ffffff);
    max-width: 600px;
    margin: auto;
    border-radius: 10px;
    padding: 30px;
  }
  .profile-item {
    margin-bottom: 20px;
    color: #333;
    font-size: 1.2em;
  }
  .profile-item strong {
    color: #555;
  }
  .profile-item a {
    color: #007bff;
    text-decoration: none;
  }
  .profile-item a:hover {
    text-decoration: underline;
  }
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }
  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }
  .btn-warning {
    color: #212529;
    background-color: #ffc107;
    border-color: #ffc107;
  }
  .btn-warning:hover {
    color: #212529;
    background-color: #e0a800;
    border-color: #d39e00;
  }
  .emailVf img {
    margin-left: 10px;
  }
</style>
