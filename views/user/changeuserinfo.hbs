<!-- edituserinfo.hbs (Edit User Info View) -->
<section class="edit-userinfo-section">
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm p-4">
          <h2 class="text-center mb-4">Edit User Info</h2>
          <form action="/edituserinfo/{{UserInfo._id}}" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-3">
              <label for="Name" class="form-label">Name</label>
              <input type="text" name="name" id="Name" class="form-control" required value="{{UserInfo.name}}" />
            </div>

            <div class="form-group mb-3">
              <label for="Email" class="form-label">Email</label>
              <input type="email" name="email" id="Email" class="form-control" required value="{{UserInfo.email}}" />
            </div>

            <div class="form-group mb-3">
              <label for="Mobile" class="form-label">Mobile</label>
              <input type="Mobile" name="mobile"  pattern="[1-9][0-9]{9}" maxlength="10" id="Mobile" class="form-control" required value="{{UserInfo.mobile}}" />
              <div id="mobileHelp" class="form-text">Please enter a 10-digit mobile number starting with a non-zero
                digit.</div>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a class="btn btn-secondary" href="/profile">Back</a>
              <button type="submit" class="btn btn-success">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .edit-userinfo-section {
    background-color: #f9f9f9;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  .card {
    border-radius: 10px;
  }
  .form-label {
    font-weight: 500;
    color: #555;
  }
  .btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
  }
  .btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
  }
</style>
