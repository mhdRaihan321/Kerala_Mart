<!-- search-results.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Results</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    .product-card {
      display: flex;
      align-items: center;
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-bottom: 10px;
      transition: box-shadow 0.2s;
    }

    .product-card:hover {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .product-img {
      max-width: 150px;
      margin-right: 20px;
    }

    .product-details {
      flex: 1;
    }

    .product-title {
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .product-description {
      font-size: 1rem;
      margin-bottom: 10px;
    }

    .product-price {
      font-size: 1.5rem;
      font-weight: bold;
      color: #ff9900;
      margin-bottom: 10px;
    }

    .btn-primary {
      margin-top: auto;
    }

    .alert-warning {
      background-color: #fff3cd;
      border-color: #ffeeba;
      color: #856404;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <main class="container mt-5">
    <h1>Search Results for "{{searchQuery}}"</h1>
    {{#if products.length}}
    <div class="row">
      {{#each products}}
      <div class="col-12 mb-4">
        <div class="product-card">
          <img src="{{this.imageUrl}}" class="product-img" alt="{{this.name}}">
          <div class="product-details">
            <h5 class="product-title">{{this.mainname}}</h5>
            <p class="product-description">{{this.description}}</p>
            <p class="product-price"><span style="color: red;">-{{this.offerPrice}}%</span> ₹{{this.price}}</p>
                      <span style="font-size: smaller; color: #4f4b4b;">M.R.P.: <span
              style="text-decoration: line-through;">₹{{this.mrp}}</span></span>
            <a href="/product-details/{{this._id}}" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="alert alert-warning" role="alert">
      No products found matching your search query.
    </div>
    {{/if}}
  </main>
</body>
</html>
