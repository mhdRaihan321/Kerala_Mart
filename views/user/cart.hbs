<section>
  {{#if products}}
  <div class="container">
    
    <hr>
                  <a href="/" class="btn btn-warning mb-4 text-dark" style="font-weight: bold;">
            <i class="fa-regular fa-circle-left fa-xl" style="color: #000000;"></i> Back
          </a>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Item-Image</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>
            <a href="/product-details/{{this.productDetails._id}}">
            <img style="width: 70px;height: 70px;" src="{{this.productDetails.imageUrl}}" alt="" srcset="">
            </a>
          </td>
          <td>{{this.productDetails.mainname}}</td>
          <td>Rs.{{this.productDetails.price}}</td>
          <td>
            <button class="btn btn-secondary mr-3"
              onclick="changeQuantity('{{this._id}}', '{{this.productDetails._id}}','{{../user._id}}', -1)">-</button>
            <span id="itemQuantity-{{this.productDetails._id}}">{{this.quantity}}</span>
            <button class="btn btn-primary ml-3"
              onclick="changeQuantity('{{this._id}}', '{{this.productDetails._id}}','{{../user._id}}', 1)">+</button>
          </td>
          <td>
            <button class="btn btn-danger"
              onclick="removeFromCart('{{this._id}}', '{{this.productDetails._id}}')">Remove</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <hr>
    <div style="float: right;" class="totalincart pr-5">
      <h3 style="float: right;" class="mr-5">Total: Rs.<span id="total">{{total}}</span></h3> <br>
      <a href="/place-order" class="btn btn-success mt-3" style="width: 100%;">Place Order</a>
    </div>
    <hr>
  </div>

  {{else}}
<div style="margin-top: 100px;display:flex; align-items: center;flex-direction: column;" class ="row"><h1 style="font-size: xx-large;font-weight: bold;" class="text-center">Cart is empty</h1> <br> <a style="max-width: 140px;" href="/" class="btn btn-primary text-center">Back To Home </a></div>
  {{/if}}

  <div class="Empty"></div>
</section>