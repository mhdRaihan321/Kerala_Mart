<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3 d-flex align-items-stretch">
                <a href="/product-details/{{this._id}}" class="card-link">
                    <div class="card shadow-sm" style="width: 100%; border-radius: 15px;">
                        <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}" style="height: 12rem; object-fit: scale-down; border-top-left-radius: 15px; border-top-right-radius: 15px;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{this.mainname}}</h5>
                            <p class="card-text text-muted">{{this.category}}</p>
                            <p class="card-text" style="height: 3rem; overflow: hidden; text-overflow: ellipsis;">{{this.description}}</p>
                            <p class="product-price card-text font-weight-bold">Rs.{{this.price}}â‚¹</p>
                            {{!-- <button type="button" onclick="addtoCart('{{this._id}}')" class="btn btn-primary mt-auto">See Details</button> --}}
                            <button type="button" class="btn btn-primary mt-auto">See Details</button>
                        </div>
                    </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="addToCartModal" tabindex="-1" aria-labelledby="addToCartModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addToCartModalLabel">Item Added to Cart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Your item has been added to the cart.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Continue Shopping</button>
        <a href="/cart" class="btn btn-success">Go to Cart</a>
      </div>
    </div>
  </div>
</div>


